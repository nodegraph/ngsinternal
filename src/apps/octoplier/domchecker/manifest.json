{
  "manifest_version": 2,

  "name": "Dom Checker",
  "description": "This extension provides some insight into the dom",
  "version": "1.0",

  "icons": { "16": "images/octopus_blue_16.png",
           "48": "images/octopus_blue_48.png",
          "128": "images/octopus_blue_128.png" 
          },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contextmenu.js", "utils.js", "content.js"],
      "css": ["contextmenu.css"],
      //"all_frames": true,
      "run_at": "document_start"
    }
  ],

  "permissions": [
  	"<all_urls>",
  	"contextMenus",
    "activeTab",
    "browsingData",
    "nativeMessaging"
  ]
  

}
