{
  "manifest_version": 2,

  "name": "Dom Checker",
  "description": "This extension provides some insight into the dom",
  "version": "1.0",

  "icons": { "16": "images/octopus_blue_16.png",
           "48": "images/octopus_blue_48.png",
          "128": "images/octopus_blue_128.png" 
          },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["debugutils.js", "utils.js", "point.js", "pagebox.js", "matchcriteria.js", "elemwrap.js", "elemcache.js", "pagewrap.js", "overlay.js", "contextmenu.js", "distinctcolors.js","overlayset.js","overlaysets.js", "content.js", "eventblocker.js"],
      "css": ["contextmenu.css", "overlay.css"],
      //"all_frames": true,
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    "contextmenu.html"
  ],

  "permissions": [
  	"<all_urls>",
  	"contextMenus",
    "activeTab",
    "browsingData",
    "nativeMessaging",
    "history"
  ]
  

}
