{
  "manifest_version": 2,

  "name": "Octoplier Plug For Chrome",
  "description": "This extension allows Octoplier to record Chrome actions",
  "version": "1.0",

  "icons": { "16": "images/octopus_blue_16.png",
           "48": "images/octopus_blue_48.png",
          "128": "images/octopus_blue_128.png" 
          },

  "browser_action": {
    "default_icon": {
      "19": "images/octopus_blue_19.png",
      "38": "images/octopus_blue_38.png"
    },
    "default_popup": "popup.html",
    "default_title": "octoplier"
  },
  
  "background": {
    "scripts": ["utils.js", "background.js"]
  },
  
  "content_security_policy": "script-src 'self' https://localhost:8083 object-src 'self' ",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "css": [ "hidepage.css" ],
      //"all_frames": true,
      "run_at": "document_start"
    }
  ],

  "permissions": [
  	"<all_urls>",
    "activeTab",
    "browsingData",
    "nativeMessaging",
    "https://127.0.0.1:8083",
    "https://ajax.googleapis.com/"
  ]
  

}
