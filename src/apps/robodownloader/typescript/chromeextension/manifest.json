{
  "manifest_version": 2,

  "name": "Robo Downloader",
  "description": "Automates the browser using a node graph.",
  "version": "1.2.9",

  "icons": { "16": "images/robot_blue_16.png",
           "48": "images/robot_blue_48.png",
          "128": "images/robot_blue_128.png" 
          },

  "background": {
      "scripts": ["m.js", "bg.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["m.js", "cnt.js"],
      "css": ["contextmenu.css", "overlay.css", "popupdialog.css"],
      "all_frames": true,
      "run_at": "document_start",
      "match_about_blank": true
    }
  ],
  
  "web_accessible_resources": [
    "contextmenu.html",
    "images/hourglass.gif"
  ],

  "permissions": [
  	"cookies",
  	"http://*/*", 
  	"https://*/*",
  	"<all_urls>",
  	"contextMenus",
    "activeTab",
    "tabs",
    "browsingData",
    "nativeMessaging",
    "history",
    "webNavigation"
  ]
  

}
